---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/componentes/Carousel.astro";
import { Code } from "astro:components";
import Button from "../components/componentes/Button.astro";
---

<Layout title="Custom Design">
	<div
		class="w-full lg:justify-start lg:min-w-[770px] py-6 flex flex-col md:flex-row justify-center md:items-center
		animate-flip-up animate-duration-4000 animate-delay-2000"
	>
		<div class="text-start max-w-[280px] md:max-w-[400px]">
			<div class="">
				<h1 class="text-3xl text-dark dark:text-white font-sans">
					<b>Design System <br /> With Tailwind</b>
				</h1>
				<p class="text-md text-dark dark:text-white">
					The components will be styled with Tailwind using classes,
					so you simply have to copy and paste.
				</p> 
			</div>
			<div class="w-full flex items-center justify-start my-2">
				<a
					href="/start"
					class="bg-kai-button
					mr-2 mb-2 px-2.5 py-1.5
					text-white font-medium text-center
					justify-center inline-flex items-center flex-row
					rounded-lg border gap-x-2 opacity-90
					cursor-pointer hover:bg-kai-hover hover:text-white
					hover:opacity-100 hover:bg-black-600
					hover:scale-110 hover:shadow-lg
					dark:focus:ring-black-300
					focus:ring-2 focus:outline-none focus:ring-black-30
					transition-all duration-200 ease-in-out scale-90"
					>Get Start</a
				>
				<a
					href="https://github.com/degszz"
					class="bg-kai-button
					mr-2 mb-2 px-2.5 py-1.5
					text-white font-medium text-center
					justify-center inline-flex items-center flex-row
					rounded-lg border gap-x-2 opacity-90
					cursor-pointer hover:bg-kai-hover hover:text-white
					hover:opacity-100 hover:bg-black-600
					hover:scale-110 hover:shadow-lg
					dark:focus:ring-black-300
					focus:ring-2 focus:outline-none focus:ring-black-30
					transition-all duration-200 ease-in-out scale-90"
					target="_blank"
					><svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"
						></path><path
							d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
						></path></svg
					></a
				>
			</div>
		</div>
		<div class="w-full md:w-fit flex justify-center">
			<img
				src="/puzzle.png"
				class="w-[200px] md:w-[300px] md:h-[300px]
			animate-jump animate-infinite animate-duration-[2500ms] animate-delay-1000"
				alt=""
			/>
		</div>
	</div>

	<div class="flex max-w-[350px] md:w-full md:max-w-none lg:max-w-none">
		<div
			class="border-l-2 border-gray-300 mx-3 md:mx-0 pb-6 space-y-10 w-full"
		>
			<div class="relative">
				<div
					class="absolute -left-3 bg-blue-400 h-6 w-6 rounded-full border-2"
				>
					<span class="text-white text-center flex justify-center items-center h-full w-full">
						1
					</span>
				</div>
				<div class="pl-6">
					<h2 class="text-sans text-xl dark:text-white mb-2">
						<b>Create/Configuration Project:</b>
					</h2>
					<span class="dark:text-white text-md text-serif"
						>Start by creating a new Astro project</span
					>
					<Code
						code={`npm create astro@latest`}
						class="flex flex-col justify-center p-4 rounded-xl border-2 border-kai-ring dark:border-kai-950"
						theme="dark-plus"
						lang="astro"
					/>
				</div>
			</div>
			<div class="relative">
				<div
					class="absolute -left-3 bg-blue-400 h-6 w-6 rounded-full border-2"
				>
					<span class="text-white text-center flex justify-center items-center h-full w-full">
						2
					</span>
				</div>
				<div class="pl-6">
					<h2 class="text-sans text-xl dark:text-white mb-2">
						<b>install Dependencies:</b>
					</h2>
					<span class="dark:text-white text-md text-serif"
						>Install Tailwind CSS</span>
					<Code
						code={`npx astro add tailwind`}
						class="flex flex-col justify-center p-4 rounded-xl border-2 border-kai-ring dark:border-kai-950"
						theme="dark-plus"
						lang="astro"
					/>
				</div>
			</div>
			<div class="relative">
				<div
					class="absolute -left-3 bg-blue-400 h-6 w-6 rounded-full border-2"
				>
					<span
						class="text-white text-center flex justify-center items-center h-full w-full"
					>
						3
					</span>
				</div>
				<div class="pl-6">
					<h2 class="text-sans text-xl dark:text-white mb-2">
						<b>Create a Component:</b>
					</h2>
					<span class="dark:text-white text-md text-serif"
						>Then copy and paste into your file to have the
						component styled using classes with Tailwind</span
					>
					<div class="">
						<div class="w-full flex justify-start py-4">
							<Button />
						</div>
						<span class="dark:text-white text-md text-serif"
							>Code:</span
						>
						<div
							class="flex flex-col justify-center my-1 bg-[#1E1E1E] p-4 rounded-xl border-2 border-kai-ring dark:border-kai-950"
						>
							<Code
								class=""
								code={`<button class="bg-orange-300 mr-2 mb-2 px-2.5 py-1.5 
		text-black font-medium text-center 
		justify-center inline-flex items-center flex-row 
		rounded-lg border gap-x-2 opacity-90
		cursor-pointer hover:bg-orange-500 hover:text-white 
		hover:opacity-100 hover:bg-black-600 
		hover:scale-110 hover:shadow-lg 
		dark:focus:ring-black-300 
		focus:ring-2 focus:outline-none focus:ring-black-30 
		transition-all duration-200 ease-in-out scale-90">
Button
</button>`}
								lang="astro"
								theme="dark-plus"
							/>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
