---
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro:components";
import Toggle from "../../components/componentes/ThemeToggle.astro";
---

<link
    rel="stylesheet"
    href="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.min.css"
/>
<Layout title="ThemeToggle">
    <div class="max-w-[350px] md:w-[650px] lg:w-full md:max-w-none mb-[30px]">
        <div class="mt-8 py-6">
            <h1 class="text-3xl text-black dark:text-white font-sans">
                <b>Toggle Theme</b>
            </h1>
            <div class="flex items-center md:justify-start">
                <p class="text-md text-black dark:text-white">
                    This is a <b>Toggle Theme</b> to give the user the ability to
                    choose the theme.
                </p>
            </div>
        </div>
        <div class="lg:min-w-[800px]">
            <div class="border-b border-gray-200 dark:border-white mb-4">
                <ul
                    class="flex flex-wrap -mb-px"
                    id="myTab"
                    data-tabs-toggle="#myTabContent"
                    role="tablist"
                >
                    <li class="mr-2" role="presentation">
                        <button
                            class="inline-block text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300 active"
                            id="dashboard-tab"
                            data-tabs-target="#dashboard"
                            type="button"
                            role="tab"
                            aria-controls="dashboard"
                            aria-selected="true">Component</button
                        >
                    </li>
                    <li class="mr-2" role="presentation">
                        <button
                            class="inline-block text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300"
                            id="profile-tab"
                            data-tabs-target="#profile"
                            type="button"
                            role="tab"
                            aria-controls="profile"
                            aria-selected="false">Code</button
                        >
                    </li>
                </ul>
            </div>
            <div id="myTabContent">
                <div
                    class="hidden"
                    id="profile"
                    role="tabpanel"
                    aria-labelledby="profile-tab"
                >
                    <div class="flex flex-col justify-center my-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-2 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={`<button
class="bg-kai-button
px-2.5 py-1.5
text-black font-medium text-center
justify-center inline-flex items-center flex-row
rounded-lg border gap-x-2 opacity-90
cursor-pointer hover:bg-kai-hover hover:text-white
hover:opacity-100 hover:bg-black-600
hover:scale-110 hover:shadow-lg
dark:focus:ring-black-300
focus:ring-2 focus:outline-none focus:ring-black-30
transition-all duration-200 ease-in-out scale-90"
type="button"
id="theme-selector"
>
<span class="sr-only"
>Enable <span class="dark:hidden">light</span><span
class="hidden dark:inline">dark</span
> mode</span
>
<div class="hidden dark:inline text-white">svgiv>
<div class="block dark:hidden text-white">svgiv>
</button>

<script>
document.getElementById("theme-selector")?.addEventListener("click", () => {
if (localStorage.theme === "dark") {
localStorage.theme = "light";
document.documentElement.classList.remove("dark");
} else {
localStorage.theme = "dark";
document.documentElement.classList.add("dark");
}
});
</script>`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>
                </div>
                <div
                    class=""
                    id="dashboard"
                    role="tabpanel"
                    aria-labelledby="dashboard-tab"
                >
                    <div
                        class="flex max-h-[500px] min-h-[300px] lg:min-w-[800px] flex-col justify-center items-center bg-[#1E1E1E] p-4 rounded-md border-2 border-kai-ring dark:border-kai-950"
                    >
                        <Toggle />
                    </div>
                </div>

                <div class="mt-4">
                    <h2 class="text-2xl my-2 text-white border-b border-white">
                        Usage
                    </h2>
                    <div class="flex flex-col justify-center my-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-4 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={` lorem ipsum dolor sit amet consectetur adipisicing elit lorem`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>

                    <div class="flex flex-col justify-center my-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-4 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={` lorem ipsum dolor sit amet consectetur adipisicing elit lorem`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>

                    <h2 class="text-2xl my-2 text-white border-b border-white">
                        Examples
                    </h2>
                    <div class="text-white py-2">
                        <h3 class="text-2xl">Eso:</h3>
                        <span>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Nihil quo, accusantium</span>
                    </div>
                    <div class="flex flex-col justify-center my-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-4 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={` lorem ipsum dolor sit amet consectetur adipisicing elit lorem`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
<script
    src="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.bundle.js"
></script>

