---
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro:components";
import Foorm from "../../components/componentes/Form.astro";
---

<link
    rel="stylesheet"
    href="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.min.css"
/>
<Layout title="Form">
    <div class="max-w-[350px] md:w-[650px] lg:w-full md:max-w-none mb-[30px]">
        <div class="my-4">
            <h1 class="text-3xl text-black dark:text-white font-sans">
                <b>Form</b>
            </h1>
            <div class="flex items-center md:justify-start">
                <p class="text-md text-black dark:text-white">
                    This is a <b>Form</b> with method POST, to send the response
                    to a database made with Astro DB.
                </p>
            </div>
        </div>
        <div class="lg:min-w-[800px]">
            <div class="border-b border-gray-200 dark:border-white mb-4">
                <ul
                    class="flex flex-wrap -mb-px"
                    id="myTab"
                    data-tabs-toggle="#myTabContent"
                    role="tablist"
                >
                    <li class="mr-2" role="presentation">
                        <button
                            class="inline-block text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300 active"
                            id="dashboard-tab"
                            data-tabs-target="#dashboard"
                            type="button"
                            role="tab"
                            aria-controls="dashboard"
                            aria-selected="true">Component</button
                        >
                    </li>
                    <li class="mr-2" role="presentation">
                        <button
                            class="inline-block text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300"
                            id="profile-tab"
                            data-tabs-target="#profile"
                            type="button"
                            role="tab"
                            aria-controls="profile"
                            aria-selected="false">Code</button
                        >
                    </li>
                </ul>
            </div>
            <div id="myTabContent">
                <div
                    class="hidden"
                    id="profile"
                    role="tabpanel"
                    aria-labelledby="profile-tab"
                >
                    <div class="flex flex-col justify-center my-6">
                        <Code
                            class="lg:max-w-[800px] max-h-[500px] min-h-[300px]
                            lg:min-w-[800px] w-full p-2 border-2 rounded-md
                            border-kai-ring dark:border-kai-950"
                            code={`<!-- component -->
<div 
    class=" flex items-center justify-center w-full">
	<div 
        class="bg-white dark:bg-black shadow-md
     rounded-lg px-8 py-6 max-w-md">
		<h1 class="text-2xl font-bold text-center mb-4
        dark:text-gray-200">Welcome Back!</h1>
		<form action="#">
			<div class="mb-4">
				<label for="email" 
                    class="block text-sm font-medium text-gray-700
                     dark:text-gray-300 mb-2">Email Address
                     </label>
				<input type="email" id="email" class="shadow-sm
                rounded-md w-full px-3 py-2 border border-gray-300
                focus:outline-none focus:ring-indigo-500 
                focus:border-indigo-500"
                   placeholder="your@email.com" required>
			</div>
			<div class="mb-4">
				<label for="password" class="block text-sm font-medium
                text-gray-700 dark:text-gray-300 mb-2">Password
                </label>
				<input type="password" id="password" class="shadow-sm
                 rounded-md w-full px-3 py-2 border border-gray-300
                 focus:outline-none focus:ring-indigo-500
                focus:border-indigo-500" 
                  placeholder="Enter your password" required>
				<a href="#"
					class="text-xs text-gray-600 hover:text-indigo-500
                    focus:outline-none focus:ring-2 focus:ring-offset-2
                    focus:ring-indigo-500">Forgot
					Password?</a>
			</div>
			<div class="flex items-center justify-between mb-4">
				<div class="flex items-center">
					<input type="checkbox" id="remember" 
                    class="h-4 w-4 rounded border-gray-300 text-kai-button
                     hover:text-kai-hover focus:outline-none" checked>
					<label for="remember" class="ml-2 block text-sm 
                    text-gray-700 dark:text-gray-300">Remember me</label>
				</div>
				<a href="#"
					class="text-xs text-kai-button hover:text-kai-hover
                    focus:outline-none focus:ring-2 focus:ring-offset-2 
                    focus:ring-indigo-500">
                    Create Account
                </a>
			</div>
			<button  type="submit" 
            class="w-full flex justify-center py-2 px-4 border 
            border-transparent rounded-md shadow-sm text-sm font-medium
            text-white bg-kai-button hover:bg-kai-hover focus:outline-none
            focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Login
            </button>
		</form>
	</div>
</div>`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>
                </div>
                <div
                    class=""
                    id="dashboard"
                    role="tabpanel"
                    aria-labelledby="dashboard-tab"
                >
                    <div
                        class="flex max-h-[500px] min-h-[300px] lg:min-w-[800px] flex-col justify-center items-center bg-[#1E1E1E] p-4 rounded-md border-2 border-kai-ring dark:border-kai-950"
                    >
                        <Foorm />
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
<script
    src="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.bundle.js"
></script>
