---
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro:components";
import Buttonnnn from "../../components/componentes/Button.astro";
---

<Layout title="Button">
    <div class="flex">

        <div class="max-w-[450px] md:w-[650px] lg:w-full md:max-w-none">
            <div class="my-4">
                <h1 class="text-3xl text-black dark:text-white font-sans">
                    <b>Button</b>
                </h1>
                <div class="flex ">
                    <p
                        class="text-md text-black dark:text-white"
                    >
                        This is the stylized <b>Button</b> so that when you do :hover
                        it creates a zoom effect.
                    </p>
                </div>
            </div>
            <div class="flex flex-col justify-center items-center bg-[#1E1E1E] p-4 rounded-md border-2 border-kai-ring dark:border-kai-950">
                <Buttonnnn/>
            </div>
            <div class="flex flex-col relative  justify-center my-6">
                <p class="text-md text-black dark:text-white">Code:</p>
                <Code
                    class="max-w-[1000px] lg:min-w-[1000px] w-full p-2 border-2 rounded-md border-kai-ring dark:border-kai-950"
                    code={`<button 
    class="bg-orange-300 mr-2 mb-2 px-2.5 py-1.5 
    text-black font-medium text-center 
    justify-center inline-flex items-center flex-row 
    rounded-lg border gap-x-2 opacity-90
    cursor-pointer hover:bg-orange-500 hover:text-white 
    hover:opacity-100 hover:bg-black-600 
    hover:scale-110 hover:shadow-lg 
    dark:focus:ring-black-300 
    focus:ring-2 focus:outline-none focus:ring-black-30 
    transition-all duration-200 ease-in-out scale-90"
></button>`}
                    lang="astro"
                    theme="dark-plus"
                />
            </div>
        </div>
    </div>
</Layout>
