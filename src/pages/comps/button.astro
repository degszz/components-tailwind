---
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro:components";
import Buttonnnn from "../../components/componentes/Button.astro";
---

<link
    rel="stylesheet"
    href="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.min.css"
/>
<Layout title="Button">
    <div class="max-w-[350px] md:w-[650px] lg:w-full md:max-w-none mb-[30px]">
        <div class="mt-8 py-6">
            <h1 class="text-3xl text-black dark:text-white font-sans">
                <b>Button</b>
            </h1>
            <div class="flex">
                <p class="text-md text-black dark:text-white">
                    This is the stylized <b>Button</b> so that when you do :hover
                    it creates a zoom effect.
                </p>
            </div>
        </div>

        <div class="lg:min-w-[800px]">
            <div class="border-b border-gray-200 dark:border-white mb-4">
                <ul
                    class="flex flex-wrap -mb-px"
                    id="myTab"
                    data-tabs-toggle="#myTabContent"
                    role="tablist"
                >
                    <li class="mr-2" role="presentation">
                        <button
                            class="inline-block text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300 active"
                            id="dashboard-tab"
                            data-tabs-target="#dashboard"
                            type="button"
                            role="tab"
                            aria-controls="dashboard"
                            aria-selected="true">Component</button
                        >
                    </li>
                    <li class="mr-2" role="presentation">
                        <button
                            class="inline-block text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300"
                            id="profile-tab"
                            data-tabs-target="#profile"
                            type="button"
                            role="tab"
                            aria-controls="profile"
                            aria-selected="false">Code</button
                        >
                    </li>
                </ul>
            </div>
            <div id="myTabContent">
                <div
                    class="hidden"
                    id="profile"
                    role="tabpanel"
                    aria-labelledby="profile-tab"
                >
                    <div class="flex flex-col justify-center my-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-2 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={`<button 
    class="bg-orange-300 mr-2 mb-2 px-2.5 py-1.5 text-black font-medium
    text-center justify-center inline-flex items-center flex-row rounded-lg
    border gap-x-2 opacity-90 cursor-pointer hover:bg-orange-500
    hover:text-white hover:opacity-100 hover:bg-black-600 hover:scale-110
    hover:shadow-lg dark:focus:ring-black-300 focus:ring-2 focus:outline-none
    focus:ring-black-30 transition-all duration-200 ease-in-out scale-90">
    Button Estilized
</button>`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>
                </div>
                <div
                    class=""
                    id="dashboard"
                    role="tabpanel"
                    aria-labelledby="dashboard-tab"
                >
                    <div
                        class="flex max-h-[500px] min-h-[300px] lg:min-w-[800px] flex-col justify-center items-center bg-[#1E1E1E] p-4 rounded-md border-2 border-kai-ring dark:border-kai-950"
                    >
                        <Buttonnnn />
                    </div>
                </div>

                <!-- EJEMPLOS -->

                <div class="mt-4">
                    <h2 class="text-2xl my-2 text-white border-b border-white">
                        Usage
                    </h2>
                    <div class="text-white py-2">
                        <h3 class="text-2xl">Html:</h3>
                        <span>
                            This is the HTML code to create an button component.
                        </span>
                    </div>
                    <div class="flex flex-col justify-center mb-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-4 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={`<button 
    class="bg-orange-300 mr-2 mb-2 px-2.5 py-1.5 text-black font-medium
    text-center justify-center inline-flex items-center flex-row rounded-lg
    border gap-x-2 opacity-90 cursor-pointer hover:bg-orange-500
    hover:text-white hover:opacity-100 hover:bg-black-600 hover:scale-110
    hover:shadow-lg dark:focus:ring-black-300 focus:ring-2 focus:outline-none
    focus:ring-black-30 transition-all duration-200 ease-in-out scale-90">
    Button Estilized
</button>`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>

                    <div class="text-white py-2">
                        <h3 class="text-2xl">Tooltipe:</h3>
                        <span>
                            This is tooltipe to show a message with the button.
                        </span>
                    </div>
                    <div class="flex flex-col justify-center mb-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-4 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={`<button data-tooltip-target="tooltip-default" type="button" 
    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4
    focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm
    px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700
    dark:focus:ring-blue-800">Default tooltip
</button>

<div id="tooltip-default" role="tooltip" 
    class="absolute z-10 invisible inline-block px-3
    py-2 text-sm font-medium text-white transition-opacity
    duration-300 bg-gray-900 rounded-lg shadow-xs opacity-0
    tooltip dark:bg-gray-700">
    Tooltip content
    <div class="tooltip-arrow" data-popper-arrow></div>
</div>`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>

                    <h2 class="text-2xl my-2 text-white border-b border-white">
                        Examples
                    </h2>
                    <div class="text-white py-2">
                        <h3 class="text-2xl">Usage:</h3>
                        <span>
                            This is how you can use the button component in your
                            project astro.
                        </span>
                    </div>
                    <div class="flex flex-col justify-center mb-6">
                        <Code
                            class="text-sm w-full lg:max-w-[800px] lg:min-w-[800px] p-4 border-2 rounded-md border-kai-ring dark:border-kai-950"
                            code={`---
import Button from "@/components/Button.astro";
---

<div class="lg:min-w-[800px]">
    <Button/>
</div>`}
                            lang="astro"
                            theme="dark-plus"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
<script
    src="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.bundle.js"
></script>
