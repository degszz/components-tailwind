---
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro:components";
import Header from "../../components/componentes/Header.astro";
---

<Layout title="Header">
    <div class="w-[430px] sm:w-[500px] md:w-full">
        <div class="my-4 text-center md:text-start">
            <h1 class="text-3xl text-black dark:text-white">
                <b>Header</b>
            </h1>
            <div class="flex justify-center items-center md:justify-start">
                <p
                    class="text-md max-w-[400px] md:max-w-[650px] text-black dark:text-white"
                >
                    This is the structure of a <b>Header</b> already stylized to
                    put the components on each side.
                </p>
            </div>
        </div>
        <Header />
        <div class="flex flex-col items-center justify-center my-6">
            <div
                class="bg-[#1E1E1E] py-2 w-[350px] md:w-full border-b-1 border-2 rounded-t-2xl"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-code text-white ml-3"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path d="M7 8l-4 4l4 4"></path><path
                        d="M17 8l4 4l-4 4"></path><path d="M14 4l-4 16"
                    ></path></svg
                >
            </div>
            <Code
                class="w-[350px] md:w-full p-2 border-2 border-t-0"
                code={`<!-- fixed top-0 w-full-->
    <header
    class="z-[1000] text-white border-b-2
    text-white-950 h-[51px] md:h-[65px] 
    w-[500px] flex items-center justify-between "
    >
        <div
            class="flex px-1 items-center justify-center
             min-w-[100px] text-center h-full"
        >
            LEFT
        </div>
        <div class="flex w-full h-full justify-center items-center">
            <div>
                CENTER
            </div>
        </div>
        <div
            class="flex px-1 items-center justify-center
             min-w-[100px] text-center h-full"
        >
            RIGHT
        </div>
    </header>
    <script>
        window.addEventListener("scroll", function () {
            var header = document.querySelector("header");
            header.classList.toggle("abajo", window.scrollY > 0);
        });
    </script>
    <style>
        header {
            background: transparent;
        }
        header.abajo {
            background-color: #000;
        }
    </style>
    `}
                lang="astro"
                theme="dark-plus"
            />
        </div>
    </div>
</Layout>
