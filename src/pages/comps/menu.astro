---
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro:components";
import Menu from "../../components/componentes/Menu.astro";
---

<Layout title="Menu">
    <h1 class="text-white text-2xl">Menu</h1>
    <p class="text-white text-md">This is a Menu.</p>
    <Code
        class="max-w-fit p-2 border-2 rounded-2xl my-4"
        code={`<nav>
    <a
        id="menu-button"
        data-collapse-toggle="navbar-sticky"
        data-nav-toggle="#navbar-sticky"
        class="cursor-pointer text-white"
        aria-controls="navbar-sticky"
        aria-expanded="false"
    >
        MENU
    </a>
    <div id="menu-open" class="hidden w-full navbar" id="navbar-sticky">
        <div
            class="text-white w-[80vw] md:w-[40vw]
            h-custom--calc md:h-custom-calc left-0
            top-[51px] md:top-[65px] absolute p-3
            bg-black font-medium border-2 md:mt-0"
        >
            <div class="flex flex-col 
            justify-between h-full text-start">
                <div>
                    <ul class="w-fit">
                        <h3 class="underline">Dashboard</h3>
                        <li>
                            <a
                                href="/"
                                class="hover:underline
                                text-start btn block py-2 pl-3
                                text-white rounded md:bg-transparen
                                md:py-1 hover:text-orange-600"
                                aria-current="page"
                            >
                                Home
                            </a>
                        </li>

                    </ul>
                    <ul class="w-fit">
                        <h3 class="underline"><b>Components</b></h3>
                        <li>
                            <a
                                href="/product/shirt1"
                                class="hover:underline text-start
                                btn block py-2 pl-3 text-white
                                rounded md:bg-transparen md:py-1
                                hover:text-orange-600"
                            >
                                Acordion
                            </a>
                        </li>

                    </ul>
                </div>
                <div>
                    <div class="py-2"
                        <ul class="w-full flex">
                            <li
                                class="flex justify-start items-center
                                text-white hover:text-orange-600
                                hover:cursor-pointer mx-2"
                            >
                                <svg
                                </svg
                                >
                                <a href="">Instagram</a>
                            </li>
                        </ul>
                    </div>
                    <div class="border-t-2 py-2 border-white">
                        <p class="mx-2"><b>Design: </b></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    const button = document.querySelector("#menu-button") as Element;
    const menuOpen = document.querySelector("#menu-open") as Element;

    button?.addEventListener("click", () => {
        menuOpen.classList.toggle("hidden");
    });
</script>`}
        lang="astro"
        theme="dark-plus"
    />
</Layout>
