---
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro:components";
import Menuu from "../../components/componentes/Menu.astro";
---

<Layout title="Menu">
    <div class="max-w-[450px] md:w-[650px] lg:w-full md:max-w-none">
        <div class="my-4 ">
            <h1 class="text-3xl text-black dark:text-white font-sans">
                <b>MENU</b>
            </h1>
            <div class="flex justify-center items-center md:justify-start">
                <p
                    class="text-md text-black  dark:text-white"
                >
                    This is a <b>Menu</b> using class absolute, and has a variable with arrays to show the Links with a .map
                </p>
            </div>
        </div>

        <!-- component -->
        <div class="flex flex-col justify-center items-center bg-[#1E1E1E] p-4 rounded-md border-2 border-kai-ring dark:border-kai-950">
            <Menuu />
        </div>

        <div class="flex flex-col justify-center my-6">
            <p class="text-md text-black dark:text-white">Code:</p>
            <Code
                class="max-w-[1000px] lg:min-w-[1000px] w-full p-2 border-2 rounded-md border-kai-ring dark:border-kai-950"
                code={`---
const Links = [
    {
        name: "LINKS",
        link: "/",
    },
];
---

<nav>
    <a
        id="menu-button"
        data-collapse-toggle="navbar-sticky"
        data-nav-toggle="#navbar-sticky"
        class="cursor-pointer text-dark dark:text-white"
        aria-controls="navbar-sticky"
        aria-expanded="false"
    >
        <b>MENU</b>
    </a>
    <div id="menu-open" class="hidden w-full navbar" id="navbar-sticky">
        <div
            class="text-white w-[80vw] md:w-[40vw] h-custom--calc md:h-custom-calc left-0 top-[51px] md:top-[65px] absolute p-3 bg-black font-medium border-2 md:mt-0"
        >
            <div class="flex flex-col justify-between h-full text-start">
                <div>
                    <ul class="w-fit">
                        <h3 class="underline">Dashboard</h3>
                        <li>
                            <a
                                href="/"
                                class="hover:underline text-start btn block py-2 pl-3 text-white rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                Home
                            </a>
                        </li>
                        <li>
                            <a
                                href="/contact"
                                class="hover:underline text-start btn block py-2 pl-3 text-white rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                Contact
                            </a>
                        </li>
                    </ul>
                    <ul class="w-fit">
                        <h3 class="underline"><b>Components</b></h3>

                        {
                            Links.map((link) => (
                                <li>
                                    <a
                                        href={link.link}
                                        class="hover:underline text-start btn block py-1 pl-3 text-white rounded md:bg-transparen  hover:text-kai-text"
                                    >
                                        {link.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    const button = document.querySelector("#menu-button") as Element;
    const menuOpen = document.querySelector("#menu-open") as Element;

    button?.addEventListener("click", () => {
        menuOpen.classList.toggle("hidden");
    });
</script>
`}
                lang="astro"
                theme="dark-plus"
            />
        </div>
    </div>
</Layout>
