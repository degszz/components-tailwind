---
import Layout from "../layouts/Layout.astro";

import { db, Message } from "astro:db";
const message = await db.select().from(Message);

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const name = formData.get("name");
    const email = formData.get("email");
    const text = formData.get("text");
    if (
        typeof name === "string" &&
        typeof email === "string" &&
        typeof text === "string"
    ) {
        await db.insert(Message).values({
            name,
            email,
            text,
        });
    }
}
---

<Layout title="Contact Me">
    <div
        class="w-full h-custom--calc md:h-custom-calc flex items-center md:flex-row md:items-center md:justify-between"
    >
        <div class="">
            <div class="css-peeps"></div>
        </div>
        <div></div>
        <div
            class=" dark:border-2 bg-white dark:bg-black shadow-md rounded-lg md:ml-8 px-8 py-6 h-fit w-[300px] animate-shake animate-once"
        >
            <h1 class="text-2xl font-bold mb-1 dark:text-gray-200">
                Contact Me!
            </h1>

            <form method="POST">
                <div class="mb-2">
                    <label
                        for="name"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >
                        Name
                    </label>
                    <input
                        id="name"
                        name="name"
                        type="text"
                        class="shadow-sm rounded-md w-full px-3 py-2 border-2 border-gray-300 focus:outline-none focus:ring-kai-ring focus:border-kai-ring"
                        placeholder="Enter your Name"
                        required
                    />
                </div>
                <div class="mb-2">
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Email Address</label
                    >
                    <input
                        id="email"
                        name="email"
                        type="email"
                        class="shadow-sm rounded-md w-full px-3 py-2 border-2 border-gray-300 focus:outline-none focus:ring-kai-ring focus:border-kai-ring"
                        placeholder="your@email.com"
                        required
                    />
                </div>
                <div class="mb-2">
                    <label
                        for="text"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >
                        Message
                    </label>
                    <input
                        id="text"
                        name="text"
                        type="text"
                        class="shadow-sm rounded-md w-full px-3 py-2 border-2 border-gray-300 focus:outline-none focus:ring-kai-ring focus:border-kai-ring"
                        placeholder="Message..."
                        required
                    />
                </div>
                <div class="w-full flex items-center justify-center">
                    <button
                        type="submit"
                        name="submit"
                        class="bg-kai-button hover:bg-kai-hover flex-row border justify-center text-white cursor-pointer hover:bg-black-600 focus:ring-2 focus:outline-none focus:ring-black-300 font-medium rounded-lg px-7 py-1.5 text-center inline-flex items-center dark:focus:ring-black-300 mr-2 mb-2 hover:shadow-lg transition-all duration-200 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-90 hover:opacity-100"
                        >Submit</button
                    >
                </div>
            </form>

            <div class="flex justify-center mt-2">
                <div
                    class="w-fit mx-2 flex items-end text-sm dark:text-white hover:text-kai-text"
                >
                    <a
                        href="https://github.com/degszz"
                        target="_blank"
                        class="underline"
                    >
                        Github
                    </a>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
                        ></path></svg
                    >
                </div>
                <div
                    class="w-fit mx-2 flex items-center text-sm dark:text-white hover:text-kai-text"
                >
                    <a href="" target="_blank" class="underline"> Linkedin </a>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
                        ></path><path d="M8 11l0 5"></path><path d="M8 8l0 .01"
                        ></path><path d="M12 16l0 -5"></path><path
                            d="M16 16v-3a2 2 0 0 0 -4 0"></path></svg
                    >
                </div>
            </div>
        </div>
    </div>
</Layout>

