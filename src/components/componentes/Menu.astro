---
const Links = [
    {
        name: "LINKS",
        link: "/",
    },
];
---

<nav>
    <a
        id="menubutton"
        data-collapse-toggle="navbar-sticky"
        data-nav-toggle="#navbar-sticky"
        class="cursor-pointer text-dark dark:text-white"
        aria-controls="navbar-sticky"
        aria-expanded="false"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 6l16 0"></path><path d="M4 12l16 0"></path><path
                d="M4 18l16 0"></path></svg
        >
    </a>
    <div id="menuopen" class="hidden w-full navbar" id="navbar-sticky">
        <div
            class="text-white w-[150px] md:w-[200px] h-fit left-[150px] md:left-0 md:top-[63px] absolute p-3 bg-black font-medium border-2 md:mt-0"
        >
            <div class="flex flex-col justify-between h-full text-start">
                <div>
                    <ul class="w-fit">
                        <h3 class="underline">Dashboard</h3>
                        <li>
                            <a
                                href="/"
                                class="hover:underline text-start btn block py-2 pl-3 text-white rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                Home
                            </a>
                        </li>
                    </ul>
                    <ul class="w-fit">
                        <h3 class="underline"><b>Components</b></h3>

                        {
                            Links.map((link) => (
                                <li>
                                    <a
                                        href={link.link}
                                        class="hover:underline text-start btn block py-1 pl-3 text-white rounded md:bg-transparen  hover:text-kai-text"
                                    >
                                        {link.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    const button = document.querySelector("#menubutton") as Element;
    const menuOpen = document.querySelector("#menuopen") as Element;

    button?.addEventListener("click", () => {
        menuOpen.classList.toggle("hidden");
    });
</script>
