---
const Links = [
    {
        name: "Get Start",
        link: "/start",
    },
    {
        name: "Accordion",
        link: "/comps/accordion",
    },
    {
        name: "Button",
        link: "/comps/button",
    },
    {
        name: "Carousel",
        link: "/comps/carousel",
    },
    {
        name: "Drop Down",
        link: "/comps/dropdown",
    },
    {
        name: "Form",
        link: "/comps/form",
    },
    {
        name: "Header",
        link: "/comps/header",
    },
    {
        name: "Menu",
        link: "/comps/menu",
    },
    {
        name: "Theme Toggle",
        link: "/comps/themetoggle",
    },
];
---

<nav>
    <a
        id="menu-button"
        data-collapse-toggle="navbar-sticky"
        data-nav-toggle="#navbar-sticky"
        class="cursor-pointer text-dark dark:text-white hover:underline lg:hidden"
        aria-controls="navbar-sticky"
        aria-expanded="false"
    >
        <b>MENU</b>
    </a>
    <div id="menu-open" class="hidden w-full navbar" id="navbar-sticky">
        <div
            class="dark:text-white bg-white dark:bg-black w-[80vw] md:w-[40vw] h-custom--calc md:h-custom-calc left-0 top-[51px] md:top-[65px] absolute p-3  font-medium border-2 md:mt-0"
        >
            <div class="flex flex-col justify-between h-full text-start">
                <div>
                    <ul class="w-fit">
                        <h3 class="underline">Dashboard</h3>
                        <li>
                            <a
                                href="/"
                                class="hover:underline text-start btn block py-2 pl-3 dark:text-white dark:hover:text-kai-text rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                Home
                            </a>
                        </li>
                        <li>
                            <a
                                href="/contact"
                                class="hover:underline text-start btn block py-2 pl-3 dark:text-white dark:hover:text-kai-text rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                Contact
                            </a>
                        </li>
                    </ul>
                    <ul class="w-fit">
                        <h3 class="underline"><b>Components</b></h3>

                        {
                            Links.map((link) => (
                                <li>
                                    <a
                                        href={link.link}
                                        class="hover:underline text-start btn block py-1 pl-3 dark:text-white dark:hover:text-kai-text rounded md:bg-transparen  hover:text-kai-text"
                                    >
                                        {link.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    const button = document.querySelector("#menu-button") as Element;
    const menuOpen = document.querySelector("#menu-open") as Element;

    button?.addEventListener("click", () => {
        menuOpen.classList.toggle("hidden");
    });
</script>
